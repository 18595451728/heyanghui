/* pages/edit_people/index.wxss */

page {
  background: #fff;
}

.member_page {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
}

.menmber_know {
  width: 700rpx;
  box-shadow: 0 0 20rpx #e6e6e6;
  border-radius: 20rpx;
  margin-top: 56rpx;
  padding: 0rpx 56rpx 46rpx;
  box-sizing: border-box;
}

.menmber_know text {
  font-size: 30rpx;
  margin: 34rpx 0 28rpx;
  display: inline-block;
  z-index: 99;
  position: relative;
  font-family: PingFangSC;
  font-weight: 500;
  color: #474747;
}

.moive {
  position: relative;
  box-shadow: 10rpx -7rpx 48rpx 10rpx #e6e6e6;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
}

.moveius {
  width: 586rpx;
  height: 303rpx;
}

.swiper_zhe {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.swiper_zhe image {
  width: 61rpx;
  height: 45rpx;
}

.menmber_box {
  width: 700rpx;
  box-shadow: 0 0 20rpx #e6e6e6;
  border-radius: 20rpx;
  margin-top: 56rpx;
  padding: 12rpx 35rpx;
  box-sizing: border-box;
}

.menmber_box .list_member {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #ececec;
  line-height: 110rpx;
  padding: 0 22rpx;
}

.menmber_box .list_member:first-child {
  border-top: none;
}

.menmber_box .list_member text {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: #474747;
}

.menmber_box .list_member image {
  width: 10rpx;
  height: 16rpx;
}
