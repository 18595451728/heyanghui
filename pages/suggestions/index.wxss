/* pages/suggestions/index.wxss */

page {
  background: #fff;
}

.sugges_page {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
}

.sugges_box {
  margin: 56rpx 0 96rpx;
}

.list_sugges {
  margin-bottom: 42rpx;
  width: 700rpx;
  padding: 0rpx 35rpx 46rpx;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx #e6e6e6;
  border-radius: 20rpx;
}

.list_sugges .describe {
  display: flex;
  justify-content: space-between;
  padding-top: 58rpx;
}

.list_sugges .describe text {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #474747;
}

.des_content {
  font-size: 26rpx;
  font-family: PingFangSC;
  color: #474747;
  font-weight: 500;
  padding: 40rpx 0;
  line-height: 52rpx;
  display: flex;
}

.button_solue {
  width: 632rpx;
  background: #ececec;
  text-align: center;
  line-height: 103rpx;
  height: 103rpx;
  color: #474747;
  font-size: 26rpx;
}

.feedback {
  position: fixed;
  width: 750rpx;
  height: 96rpx;
  bottom: 0;
  left: 0px;
  background: #eb544d;
  color: #fff;
  line-height: 96rpx;
  text-align: center;
  font-size: 30rpx;
}
