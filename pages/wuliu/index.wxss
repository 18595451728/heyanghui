.header {
  width: 720rpx;
  height: 173rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 27rpx 0px rgba(0, 0, 0, 0.14);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx;
}

.header_one {
  display: flex;
  align-items: center;
}

.icon1 {
  width: 117rpx;
  height: 114rpx;
}

.headermsg {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(182, 182, 182, 1);
  line-height: 40rpx;
}

.name {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(2, 2, 4, 1);
}

.icon2 {
  width: 48rpx;
  height: 48rpx;
}

.icon5 {
  width: 17rpx;
  height: 33rpx;
  margin-left: 40rpx;
}

.header_two {
  display: flex;
  align-items: center;
}

.bto {
  width: 750rpx;
  height: 100rpx;
  background: rgba(235, 84, 77, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
  text-align: center;
}

.msg {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 105rpx;
}

.msgitem {
  width: 100%;
  height: 130rpx;
  display: flex;
}

.item_one {
  height: 100%;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(185, 185, 185, 1);
}

.item_two {
  height: 100%;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item_three {
  height: 100%;
  width: 530rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 18rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.yuandian {
  width: 29rpx;
  height: 29rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.msgcontent {
  font-size: 22rpx;
  line-height: 40rpx;
}

.title {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(55, 55, 55, 1);
  margin-top: 60rpx;
}

.icon3 {
  width: 21rpx;
  height: 21rpx;
  border-radius: 50%;
}

.line {
  width: 2rpx;
  height: 102rpx;
  background: rgba(223, 223, 223, 1);
  position: absolute;
  bottom: 29rpx;
}
