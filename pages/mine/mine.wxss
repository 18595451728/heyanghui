/* pages/mine/mine.wxss */

page {
  background: #f0f1f4;
}

.top {
  width: 750rpx;
  height: 293rpx;
  position: relative;
}

.minebg {
  width: 100%;
  height: 100%;
}

.t-con {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 27rpx;
  box-sizing: border-box;
}
.t-con.cc{
  padding: 0 27rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.c-left{
  width: 252rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.headimg {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
  margin-right: 68rpx;
}
.t-con.cc .headimg{
  margin-right: 0
}
.usermes view:first-child {
  font-size: 35rpx;
  color: #fff;
  margin-bottom: 45rpx;
}

.usermes view:last-child {
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 0;
}

.u-top {
  width: 720rpx;
  height: 138rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 11rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.u-top>view {
  width: 240rpx;
  text-align: center;
}

.u-top view text {
  display: block;
}

.u-top view text:first-child {
  color: #0f0f0f;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.u-top view text:last-child {
  color: #b1b1b1;
  font-size: 25rpx;
}

.order {
  width: 720rpx;
  height: 257rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 11rpx auto;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.order-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 86rpx;
}

.order-title>view:first-child {
  color: #373737;
  font-size: 26rpx;
}

.order-title>view:last-child {
  color: #a1a1a1;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.order-title>view:last-child text {
  margin-right: 22rpx;
}

.arrow-right {
  width: 13rpx;
  height: 23rpx;
}

.line {
  display: block;
  width: 720rpx;
  height: 2rpx;
  margin-left: -32rpx;
}

.status {
  height: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.status view text {
  display: block;
  font-size: 24rpx;
  color: #373737;
  margin-top: 10rpx;
}
.msgitem{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.msgitem:nth-child(1) image {
  width: 52rpx;
  height: 49rpx;
}

.msgitem:nth-child(2) image {
  width: 48rpx;
  height: 42rpx;
}

.msgitem:nth-child(3) image {
  width: 46rpx;
  height: 51rpx;
}

.msgitem:nth-child(4) image {
  width: 50rpx;
  height: 43rpx;
}

.msgitem:nth-child(5) image {
  width: 44rpx;
  height: 42rpx;
}


.func{
  width: 720rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 11rpx auto;
  padding: 0 35rpx;
  box-sizing: border-box;
}
.u1{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 98rpx;
}
.u1>view{
  display: flex;align-items: center;
}
.u1>view text{
  font-size: 26rpx;
  color: #373737;
}
.icon{
  width: 50rpx;
  display: flex;
  align-items: center;
}
.u1>view image.p1{
  width: 22rpx;
  height: 28rpx
}
.u1>view image.p2{
  width: 26rpx;
  height: 30rpx
}
.u1>view image.p3{
  width: 27rpx;
  height: 28rpx
}
.u1>view image.p4{
  width: 25rpx;
  height: 26rpx
}
.u1>view image.p5{
  width: 25rpx;
