.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  background: #fff;
  padding-bottom: 40rpx;
  border-bottom: solid 1px #eee;
  border-top: 3rpx solid #f6f5f5;
}

.tabLayer text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  margin: 20rpx 0 0 26rpx;
  font-size: 26rpx;
  color: #666;
}

.tabLayer .active {
  color: #d2345e;
}

.flex1 {
  flex: 1;
  overflow: hidden;
  display: block;
  color: #9C9C9C;
}

.top>view {
  width: 20%;
