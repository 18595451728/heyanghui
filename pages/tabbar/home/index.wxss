.big {
  width: 100%;
  height: auto;
  margin-bottom: 105rpx;
}

.banner {
  width: 100%;
  height: 330rpx;
}

swiper {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(59, 59, 59, 1);
  text-align: center;
  margin: 50rpx 0;
  position: relative;
}

.title::before {
  display: block;
  content: "";
  width: 150rpx;
  height: 5rpx;
  background: #ecebe8;
  position: absolute;
  left: 15%;
  top: 50%;
}

.title::after {
  display: block;
  content: "";
  width: 150rpx;
  height: 5rpx;
  background: #ecebe8;
  position: absolute;
  right: 16%;
  top: 50%;
}

.center {
  width: 90%;
  height: auto;
  margin: 60rpx auto;
}

.center_item {
  width: 100%;
  /* height: 310rpx; */
  overflow: hidden;
  padding-bottom: 45rpx;
  border-bottom: 2rpx solid #f2f2ef;
  margin-bottom: 30rpx;
}

.center_item_left {
  width: 212rpx;
  height: 212rpx;
  border-radius: 7rpx;
  overflow: hidden;
  float: left;
  position: relative;
}

.center_item_left_img {
  width: 100%;
  height: 100%;
}

.hot {
  position: absolute;
  left: 15rpx;
  top: 20rpx;
  width: 31rpx;
  height: 55rpx;
}

.center_item_right {
  float: left;
  margin-left: 10%;
  width: 50%;
}

.center_item_right_title {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.center_item_right_title2 {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(182, 182, 182, 1);
  line-height: 40rpx;
  margin-top: 10rpx;
}

.center_item_right_price {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
