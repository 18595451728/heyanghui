page{
    width: 100%;
    height: 100%;
    background: #F0F1F5;
    position: relative;
}
.main{
    width: 100%;
    height: 100%;
    overflow: hidden;

}
.main_left{
    width: 150rpx;
    float: left;
    height: 100%;
    background: #fff;
    margin-right: 30rpx;
}
.main_left_item{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;

    font-size:26rpx;
    font-family:SourceHanSansCN;
    font-weight:400;
    color:rgba(51,51,51,1);

    text-align: center;
    position: relative;
}
.red{
    position: absolute;
    display: block;

    width:4rpx;
    height:28rpx;
    background: rgba(235,84,77,1);
    left: 0;
    top:50%;
    margin-top: -14rpx;

}
.active{
    background: #F0F1F4 !important;
}
.main_right{

    width: 540rpx;
    height: auto;
    background: #fff;
    
    overflow: hidden;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
}
.main_right_item{
    width: 140rpx;
    height: auto;
    margin-left:30rpx;
    margin-top: 30rpx;
    float: left;

}
.main_right_item>image{
    width:140rpx;
    height:140rpx;
    border-radius:5rpx;
}
.main_right_item>view{
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:44rpx;


    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}