.big {
  width: 100%;
  height: auto;
  margin-bottom: 105rpx;
}

.top {
  width: 100%;
  height: 100rpx;
  display: flex;
  /* padding-bottom: 10rpx; */
  border-bottom: 2rpx solid #e7e6e2;
}

.top>view {
  width: 20%;
  height: 100%;
  vertical-align: middle;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.jiantou {
  width: 20rpx;
  height: 32rpx;
  display: inline-block;
  margin-left: 10rpx;
}

.shang_sanjiao {
  width: 20rpx;
  height: 15rpx;
  display: block;
  margin-bottom: 2rpx;
}

.xia_sanjiao {
  width: 22rpx;
  height: 15rpx;
  display: block;
  transform: rotate(180deg);
}

.center {
  width: 90%;
  height: auto;
  margin: 60rpx auto;
}

.center_item {
  width: 100%;
  /* height: 310rpx; */
  padding-bottom: 45rpx;
  border-bottom: 2rpx solid #f2f2ef;
  margin-bottom: 45rpx;
  overflow: hidden;
}

.center_item_left {
  width: 212rpx;
  height: 212rpx;
  border-radius: 7rpx;
  overflow: hidden;
  float: left;
  position: relative;
}

.center_item_left_img {
  width: 100%;
  height: 100%;
}

/* .hot {
  position: absolute;
  left: 15rpx;
  top: 20rpx;
  width: 31rpx;
  height: 55rpx;
} */

.center_item_right {
  float: left;
  margin-left: 5%;
  width: 63%;
}

.center_item_right_title {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.center_item_right_title2 {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(182, 182, 182, 1);
  line-height: 40rpx;
  margin-top: 10rpx;
}

.center_item_right_price {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(234, 75, 67, 1);
  margin-top: 20rpx;
}

.price {
  font-weight: 600;
  font-size: 30rpx;
  margin-left: -10rpx;
}

.cart {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  display: inline-block;
  float: right;
}

.join {
  display: inline-block;
  float: right;
  width: 130rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 25rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(180deg, rgba(241, 159, 122, 1), rgba(236, 103, 105, 1));
  border-radius: 50rpx;
  margin-top: 15rpx;
}

.join_after {
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(234, 75, 67, 1);
  display: inline-block;
  margin: 0 10rpx;
}

.join_before {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 500;
  text-decoration: line-through;
  color: rgba(159, 159, 159, 1);
  display: inline-block;
}

.people_num {
  position: absolute;
  left: -31rpx;
  top: 21rpx;
  padding: 3rpx 25rpx;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #fff;
  background: linear-gradient(180deg, rgba(241, 159, 122, 1), rgba(236, 103, 105, 1));
  transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
}