.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  width: 750rpx;
  z-index: 1;
  background: #fff;
  font-size: 26rpx;
  text-align: center;
   border-bottom: 2rpx solid rgba(178,175,163,0.31);
}

.tabTit .active {
  color: #404040;
  background: #fff;
  border-bottom: 4rpx solid #EA4B43;
}

