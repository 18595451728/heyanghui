  overflow: hidden;
}

.center_item_left {
  width: 212rpx;
  height: 212rpx;
  border-radius: 7rpx;
  overflow: hidden;
  float: left;
  position: relative;
}

.center_item_left_img {
  width: 100%;
  height: 100%;
}

