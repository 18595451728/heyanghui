.center_item_right {
  float: left;
  margin-left: 5%;
  width: 63%;
}

.center_item_right_title {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.center_item_right_title2 {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(182, 182, 182, 1);
  line-height: 40rpx;
  margin-top: 10rpx;
}

.center_item_right_price {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(234, 75, 67, 1);
  margin-top: 20rpx;
}

.price {
  font-weight: 600;
  font-size: 30rpx;
  margin-left: -10rpx;
}

.cart {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  display: inline-block;
  float: right;
}

.join {
  display: inline-block;
  float: right;
  width: 130rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 25rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(180deg, rgba(241, 159, 122, 1), rgba(236, 103, 105, 1));
  border-radius: 50rpx;
  margin-top: 15rpx;
}

.join_after {
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(234, 75, 67, 1);
  display: inline-block;
  margin: 0 10rpx;
}

.join_before {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 500;
  text-decoration: line-through;
  color: rgba(159, 159, 159, 1);
  display: inline-block;
}

.people_num {
  position: absolute;
  left: -31rpx;
  top: 21rpx;
  padding: 3rpx 25rpx;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #fff;
  background: linear-gradient(180deg, rgba(241, 159, 122, 1), rgba(236, 103, 105, 1));
  transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
}