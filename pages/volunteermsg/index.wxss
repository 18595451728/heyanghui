page {
  background-color: #f0f1f4;
}

.content {
  width: 720rpx;
  height: 526rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 1);
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(55, 55, 55, 1);
  display: flex;
  flex-direction: column;
}

.item {
  height: 88rpx;
  width: 676rpx;
  margin-left: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}
.item text{
  width: 160rpx;
}
.item input {
  width: 500rpx;
}

.usertext {
  width: 676rpx;
  margin-left: 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
}
.usertext text{
  width: 160rpx;
}
.usertext textarea {
  width: 500rpx;
  height: 200rpx;
}

.buto {
  width: 720rpx;
  height: 102rpx;
  margin-left: 15rpx;
  background: rgba(235, 84, 77, 1);
  border-radius: 10rpx;
  margin-top: 50rpx;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 102rpx;
  text-align: center;
}
