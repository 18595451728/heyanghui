<view class="content">
  <view class="item">
    <text>姓名</text>
    <input placeholder="志愿者姓名" bindinput='names'></input>
  </view>
  <view class="item">
    
    <text>电话</text>
    <input type="number" placeholder="志愿者手机号" bindinput='tel'></input>
  </view>
  <view class="item">
    
    <text>地址</text>
    <input placeholder="志愿者地址" bindinput='area'></input>
  </view>
  <view class="usertext">
  <text>申请原因</text>
    
    <textarea placeholder="志愿者申请原因" bindinput='reason'></textarea>
  </view>
</view>
<view class="buto" bindtap="submit">
  提交
</view>